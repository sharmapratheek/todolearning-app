<% if @todo.errors.any? %>
	<p>The error has been caused for the following reasons </p>
	<ul>
	<% @todo.errors.full_messages do |msg| %>
		<%= msg %>
	<% end %>
	</ul>
<% end %>
<%= form_for @todo do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :decription %>
		<%= f.text_area :descrition%>	
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>